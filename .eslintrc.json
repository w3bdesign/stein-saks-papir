{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "plugin:jsx-a11y/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "testing-library", "cypress", "jsx-a11y"],
  "rules": {
    "no-return-assign": "off",
    "no-param-reassign": "off",
    "no-undef": "warn",
    "no-unused-vars": "warn",
    "react/jsx-max-depth" : [2, { "max": 3 }]
  }
}
